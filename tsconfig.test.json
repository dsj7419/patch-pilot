{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "types": ["jest", "node", "vscode"],
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["ES2020", "ES2022.Intl", "ES2021.String", "DOM"],
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "isolatedModules": true
    },
    "include": [
      "src/**/*.ts",
      "src/test/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".vscode-test"
    ]
  }